<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomWindowTitleBackground">
        <item name="android:background">#00000000</item>
    </style>

    <style name="article_detail_title">
        <item name="android:windowTitleSize">40dp</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="article_list_title">
        <item name="android:windowTitleSize">46dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <!-- <item name="android:windowActionBar">false</item> -->
    </style>

    <style name="setting_relative_title">
        <item name="android:windowTitleSize">46dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <!-- <item name="android:windowActionBar">false</item> -->
    </style>

    <style name="bottom_button" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="button_line" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/button_line_margin_left</item>
        <item name="android:layout_marginRight">@dimen/button_line_margin_right</item>
        <item name="android:background">#2FFFFFFF</item>
    </style>

    <style name="rss_webview_style">
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="tab_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>
    </style>
    <style name="selectable_textview">  
        <item name="android:textIsSelectable">true</item>  
    </style>
</resources>
